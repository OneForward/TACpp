{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist Debug mkdir Debug",
                ";",
                "cl",
                "/nologo",
                "/std:c++latest",
                "/Zi",
                "/EHsc",
                "/F", "10485760", // stack size: 10MB 
                "/Fo:Debug/",
                "/Fd:Debug/",
                "/Fe:",
                "Debug/${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "g++-win build active file",
            "command": "If (!(Test-Path Debug)) {mkdir Debug}; g++ -std=c++2a  -g ${file} -o ${workspaceFolder}/Debug/${fileBasenameNoExtension}",
            "args": [],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ],
    "version": "2.0.0"
}